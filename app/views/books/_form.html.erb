<%= form_with(model: @book) do |book| %>
<div class = "form">
<%=  book.label :name ,  class:"form-label" %>
<%= book.text_field :name , class:"form-control"%>

<%= book.label :author ,  class:"form-label"%>
<%= book.text_field :author , class:"form-control" %>

<%= book.label :description,  class:"form-label" %>
<%= book.text_area  :description, class:"form-control" %>

<%= book.label :publish_year ,  class:"form-label"%>
<%= book.number_field  :publish_year, class:"form-control" %>

<%= book.label :rating,  class:"form-label" %>
<%= book.number_field   :rating , class:"form-control" %>
</br>
<%= book.submit  class:"btn btn-secondary"%>
</div>
<%end%>