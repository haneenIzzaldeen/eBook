<%= render 'layouts/header' %>
<br/><br/>

<table class="table table-striped  table-hover">
  <thead>
    <tr class="table-dark">
      <th scope="col">Name</th>
      <th scope="col">Author</th>
      <th scope="col">Description</th>
      <th id="publish ">Publish Year</th>
      <th scope="col">rating</th>
      <th scope="col">update</th>
      <th scope="col">delete</th>
       <th scope="col">show</th>
    </tr>
  </thead>
  <tbody >
  <%@books.each do |book| %>
    <tr >
      
       <td> <%=book.name%></td>
       <td><%= book.author %></td>
       <td><%=book.description %></td>
       <td><%=book.publish_year%></td>
       <td><%=book.rating%></td>
       <td class="bodyField"  > <%=link_to "Edit Book ", edit_book_path(book) ,class:"btn btn-primary"%></td>
       <td class="secField"  > <%=link_to "delete Book", book, data: {'turbo-method': :delete},class:"btn btn-danger"%></td>
        <td class="secField"  > <%=link_to "show Book", book_path(book) ,class:"btn btn-dark"%></td>
    </tr>
      <%end%>
  </tbody>
</table>
